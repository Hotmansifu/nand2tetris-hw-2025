/**
 * Computes the sum of three bits.
// Full Adder: Adds two bits and a carry-in
CHIP FullAdder {
    IN a, b, cin;
    OUT sum, cout;

    PARTS:
    HalfAdder(a=a, b=b, sum=ha_sum, carry=ha_carry);
    HalfAdder(a=ha_sum, b=cin, sum=sum, carry=ha2_carry);
    Or(a=ha_carry, b=ha2_carry, out=cout);
}
